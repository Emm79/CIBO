<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F3"
    tools:context="imagen.emm.cibo.tomaFotografia">

    <TextView
        android:id="@+id/text_instruccion_tomaf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Instrucciones_elegir_fotos"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/imageViewFotoPreview"
        android:layout_width="300sp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/previo"
        android:layout_marginTop="30dp"
        android:layout_below="@id/text_instruccion_tomaf"/>

    <Button
        android:id="@+id/btn_TomarFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:onClick="pickFromGallery"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:layout_marginRight="@android:dimen/app_icon_size"
        android:text="@string/Elegir_Fotos"
        android:layout_below="@id/imageViewFotoPreview"/>

    <Button
        android:id="@+id/btn_Aceptar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#83878D"
        android:textColor="#FFFFFF"
        android:text="@string/aceptar"
        android:onClick="verNombres"
        android:layout_below="@id/btn_TomarFoto"
        android:layout_alignStart="@id/btn_TomarFoto"
        android:layout_marginTop="30dp"
           />

    <Button
        android:id="@+id/btn_salir_fotos"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#992504"
        android:textColor="#FFFFFF"
        android:text="@string/cancelar"
        android:layout_below="@id/btn_TomarFoto"
        android:layout_alignTop="@id/btn_Aceptar"
        android:layout_alignEnd="@id/btn_TomarFoto"
        />

</RelativeLayout>